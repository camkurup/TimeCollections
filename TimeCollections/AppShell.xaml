<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TimeCollections.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TimeCollections"
    Shell.NavBarIsVisible="True">

    <!--
    Here we set the navigation bar up.
    -->
    <TabBar>
        <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

        <ShellContent
        Title="RegistrationView"
        ContentTemplate="{DataTemplate local:RegistrationView}"
        Route="RegistrationView" />

        <ShellContent
        Title="CreateNewRegistration"
        ContentTemplate="{DataTemplate local:CreateNewRegistration}"
        Route="CreateNewRegistration" />
    </TabBar>
 </Shell>
