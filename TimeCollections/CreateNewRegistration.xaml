<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TimeCollections.CreateNewRegistration"
             Title="CreateNewRegistration">

    <StackLayout Margin="20"
                 Orientation="Horizontal"
                 HorizontalOptions="Center">

        <VerticalStackLayout Margin="20,35,20,25">
            <Label x:Name="CreateRegistration"
                   Text="Create New Registration"
                   Margin="20"
                   FontSize="Header"/>
            <HorizontalStackLayout Margin="20">
                
                <Label x:Name="ProjectName"
                       Text="Project Name"
                       Padding="10"/>
                
                <Entry x:Name="InputProjectName"
                       Placeholder="Enter text"/>
            </HorizontalStackLayout>
            
            <HorizontalStackLayout Margin="20">
                <Label x:Name="Customer"
                       Text="Customer"
                       Padding="10"/>
                <Entry x:Name="InputCustomer"
                       Placeholder="Enter text"/>
            </HorizontalStackLayout>
            
            <HorizontalStackLayout Margin="20">
                <Label x:Name="Employee"
                       Text="Employee"
                       Padding="10"/>
                <Entry x:Name="InputEmployee"
                       Placeholder="Enter text"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout Margin="20">
                <Label x:Name="Activity"
                       Text="Activity"
                       Padding="10"/>
                <Entry x:Name="InputActivity"
                       Placeholder="Enter text"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout Margin="20">
                <Label x:Name="Text"
                       Text="Text"
                       Padding="10"/>
                <Entry x:Name="InputText"
                       Placeholder="Enter text"/>
            </HorizontalStackLayout>

            <Button x:Name="Create"
                    Text="Create"
                    BackgroundColor="DarkBlue"
                    Margin="20"
                    Padding="20"/>
        </VerticalStackLayout>
    </StackLayout>
</ContentPage>